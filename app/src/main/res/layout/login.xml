<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.samplepackage.activity.LoginActivity">
    <!-- Top background image -->
    <ImageView
        android:id="@+id/login_top_background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel_logo"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="45dp"
        android:text="@string/login_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:background="@drawable/form_background"
        android:elevation="8dp"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/login_identify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_identify_hint"
            android:inputType="text"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/login_forgot_password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="90dp"
            android:text="@string/login_forgot_password"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_signin_button"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/signin_button"
        android:layout_margin="32dp"
        android:layout_below="@id/login_form"
        android:layout_centerHorizontal="true" />

</RelativeLayout>



