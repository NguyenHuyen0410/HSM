<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:nestedScrollingEnabled="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- bla bla bla-->


            <ImageView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/hote_room1"
                app:layout_constraintTop_toTopOf="parent"  />

            <TextView
                android:id="@+id/room_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/room_text"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_slider" />

            <TextView
                android:id="@+id/room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="101"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/room_number_text"
                app:layout_constraintTop_toTopOf="@+id/room_number_text" />


            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Status"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_number_text" />



            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VACANT"
                android:layout_marginStart="10dp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/status_text"
                app:layout_constraintTop_toTopOf="@+id/status_text" />


            <ImageView
                android:id="@+id/line_seperator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="#493D3D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status_text" />



            <TextView
                android:id="@+id/room_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="@string/room_type_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/line_seperator1" />

            <TextView
                android:id="@+id/room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/bed"
                android:text="DOUBLE BED"
                app:layout_constraintStart_toStartOf="@+id/room_type_text"
                app:layout_constraintTop_toBottomOf="@+id/room_type_text" />

            <TextView
                android:id="@+id/capacity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/capacity_text"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="@+id/room_type"
                app:layout_constraintTop_toBottomOf="@+id/room_type" />

            <TextView
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/people"
                android:text="2"
                app:layout_constraintStart_toStartOf="@+id/capacity_text"
                app:layout_constraintTop_toBottomOf="@+id/capacity_text" />


            <TextView
                android:id="@+id/room_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Room Area"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/capacity"
                app:layout_constraintTop_toBottomOf="@+id/capacity" />

            <TextView
                android:id="@+id/room_area"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:text="2nd Floor"
                app:layout_constraintStart_toStartOf="@+id/room_area_text"
                app:layout_constraintTop_toBottomOf="@+id/room_area_text" />


            <ImageView
                android:id="@+id/line_seperator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="#493D3D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_area" />

            <TextView
                android:id="@+id/room_type_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"

                android:text="Note"
                app:layout_constraintStart_toStartOf="@+id/room_type_text"
                app:layout_constraintTop_toTopOf="@+id/line_seperator2" />



            <TextView
                android:id="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text=". 　　　。　　　　•　 　ﾟ　　。 　　.

　　　.　　　 　　.　　　　　。　　 。　. 　

.　　 。　　　• . 　　 • 　　　　•

　　ﾟ　　 Red was not An Impostor.　 ඞ。　.

　　'　　　 1 Impostor remains 　 　　。

　　ﾟ　　　.　　　. 　　　　.　 ."
                app:layout_constraintStart_toStartOf="@+id/room_type_text_2"
                app:layout_constraintTop_toBottomOf="@+id/room_type_text_2" />

            <ImageView
                android:id="@+id/line_seperator3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="#493D3D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notes" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Price"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/room_type_text"
                app:layout_constraintTop_toBottomOf="@+id/line_seperator3" />



            <TextView
                android:id="@+id/price_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="150dp"
                android:text="đ"
                android:textColorLink="#2361BD"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/price_text" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200.000"
                android:textColor="#000000"
                android:textColorLink="#2361BD"
                android:textSize="20sp"

                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/price_currency"
                app:layout_constraintTop_toTopOf="@+id/price_text" />

            <TextView
                android:id="@+id/price_per_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/night"
                android:textColor="#000000"
                android:textColorLink="#2361BD"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/price"
                app:layout_constraintTop_toTopOf="@+id/price" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>

