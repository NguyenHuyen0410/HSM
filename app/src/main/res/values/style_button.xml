<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_button">
        <item name="android:textSize">10sp</item>
        <item name="android:text">Edit</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#B6CDEC</item>
        <item name="strokeColor">#57759C</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="save_button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">#09304F</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="back_button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">#5A9ACD</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>