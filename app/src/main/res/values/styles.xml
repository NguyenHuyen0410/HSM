<resources>



    <!-- Background style for the login form -->
    <style name="FormBackground">
        <item name="android:background">@drawable/form_background</item>
    </style>

    <!-- Background style for EditText -->
    <style name="EditTextBackground">
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <!-- Background style for Button -->
    <style name="ButtonBackground">
        <item name="android:backgroundTint">@color/sigin_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Style for profile image circle background -->
    <style name="CircleBackground">
        <item name="android:background">@drawable/circle_background</item>
    </style>

</resources>
